<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themedarkgray"
    tools:context=".HospitalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hospital_activity_image_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/hospital_card"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/thememediumgray"
            android:orientation="vertical">
            <TextView
                android:id="@+id/hospital_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heading"
                android:textColor="@color/whitesmoke"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/hospital_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/whitesmoke"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/doctor_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="20dp"
            android:text="@string/doctors"
            android:textColor="@color/whitesmoke"
            android:layout_margin="20dp"
            android:background="@color/themeorange"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>