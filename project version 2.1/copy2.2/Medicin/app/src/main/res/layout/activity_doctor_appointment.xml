<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themedarkgray"
    tools:context=".DoctorAppointment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/user_1" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:id="@+id/doctor_appointment_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/thememediumgray"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/doctor_appointment_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heading"
                    android:textColor="@color/whitesmoke"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />


                <TextView
                    android:id="@+id/doctor_appointment_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Degree"
                    android:textColor="@color/whitesmoke"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="@color/lightgray" />


                <TextView
                    android:id="@+id/doctor_appointment_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/whitesmoke"/>

                <TextView
                    android:id="@+id/doctor_appointment_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/whitesmoke"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/appointmentFloatingActionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_call" />


        <!--<Button-->
        <!--android:id="@+id/appointment_button"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="80dp"-->
        <!--android:padding="20dp"-->
        <!--android:text="@string/appointment"-->
        <!--android:layout_margin="20dp"-->
        <!--android:background="@color/antiquewhite"-->
        <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>-->

    </LinearLayout>

    </ScrollView>

</RelativeLayout>